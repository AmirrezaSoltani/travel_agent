# AI Travel Recommender Agent Configuration

# Database Configuration
DATABASE_URL=sqlite:///./travel_agent.db
# For PostgreSQL: postgresql://user:password@localhost/travel_agent

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api
PROJECT_NAME=AI Travel Recommender Agent

# External APIs
OPENSTREETMAP_URL=https://nominatim.openstreetmap.org
GEOCODING_API_KEY=your-geocoding-api-key

# NLP Models
SPACY_MODEL=en_core_web_sm

# File Paths
DATA_DIR=data
STATIC_DIR=app/static
TEMPLATES_DIR=templates

# Chat Settings
MAX_CHAT_HISTORY=50
CHAT_TIMEOUT=300

# Route Recommendation
MAX_ROUTES_PER_REQUEST=5
DEFAULT_FASTEST_WEIGHT=0.3
DEFAULT_CHEAPEST_WEIGHT=0.3
DEFAULT_SCENIC_WEIGHT=0.2
DEFAULT_QUIET_WEIGHT=0.2 